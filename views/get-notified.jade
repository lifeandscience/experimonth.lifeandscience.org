extends layout

block body
	#container-inner
		- if ('undefined' !== typeof errors && errors.length)
			ul#errors
				- each error in errors
					li.error= error

		h1 Get Notified
		p.big-text Sign up to receive an email when we launch a new Experimonth (only new ones, not repeats).
		
		.row
			#mc_embed_signup.span3.offset4.text-center
				form#mc-embedded-subscribe-form.validate(action='http://lifeandscience.us2.list-manage.com/subscribe/post?u=90bfea598695502771d70b932&id=2cb389281e', method='post', name='mc-embedded-subscribe-form', target='_blank', novalidate='novalidate')
					#login.control-group
						//label.control-label(for='email') Email: 
						.controls
							input#mce-EMAIL.required.email.input-block-level(type='email', value='', name='EMAIL', placeholder='Email', tabindex=1)
					.control-group
						.controls
							label.checkbox.text-left(for='mce-group[14889]-14889-0')
								input(id='mce-group[14889]-14889-0', type='checkbox', value='1', name='group[14889][1]')
								|  I represent an organization that is interested in Experimonthing.
					#submit.control-group
						.controls
							input#mc-embedded-subscribe.btn-auth.btn-login.btn-block(type='submit', value='Subscribe to list.', name='subscribe')
				a(href="http://www.mailchimp.com/monkey-rewards/?utm_source=freemium_newsletter&amp;utm_medium=email&amp;utm_campaign=monkey_rewards&amp;aid=90bfea598695502771d70b932&amp;afl=1")
					img(src="http://gallery.mailchimp.com/089443193dd93823f3fed78b4/images/postmark_mailchimp_red.gif", border="0", alt="Email Marketing Powered by MailChimp", title="MailChimp Email Marketing")
extends layout
block vars
	skipContainer = true

block body
	#homepage-carousel.carousel.slide.over-something
		.carousel-inner.slider-w
			.active.item
				.container
					h1.slider-header Know Yourself. Through Science.
					h2.slider-sub-header Complete monthly challenges and collect data for curious and playful scientists.
					.cta
						if locals.user()
							a.btn.btn-cta(href='/experimonths') Enroll &gt;
						else
							a.btn.btn-cta(href='/register') Get Started (It's Free) &gt;
					.slider-browsers-w.clearfix
						.slider-browser.slider-browser-left.hidden-phone(data-position-bottom='-8%')
							img(alt='Experimonth: Freeloader', src='/img/carousel_freeloader.png')
						.slider-browser.slider-browser-center(data-position-bottom='-9%')
							img(alt='Experimonth: Frenemy', src='/img/carousel_frenemy.png')
						.slider-browser.slider-browser-right.hidden-phone(data-position-bottom='-8%')
							img(alt='Experimonth: Mood', src='/img/carousel_mood.png')
			//.item
				.container
					h1.slider-header I am always on skype, feel free to ask questions.
					h2.slider-sub-header Maecenas fermentum sem in nunc sagittis iaculis.
					.cta
						a.btn.btn-cta.btn-warning(href='features/pricing_tables.html') Some Action Button
					.row.zoomed-browsers-w
						.span4
							.zoomed-browser
								img(alt='Browser-window-1', src='assets/images/browser-window.png')
						.span4
							.zoomed-browser.hidden-phone
								img(alt='Browser-window-2', src='assets/images/browser-window.png')
						.span4
							.zoomed-browser.hidden-phone
								img(alt='Browser-window-3', src='assets/images/browser-window.png')
			//a.carousel-control.left(data-slide='prev', href='#homepage-carousel')
				i.icon-chevron-left
			//a.carousel-control.right(data-slide='next', href='#homepage-carousel')
				i.icon-chevron-right
	.sub-slider-features
		.container
			.row
				.span4
					.info-bullet
						.hpIcon.hpIcon-handshake
						h5 Make a Commitment
						p
							| Make a promise to yourself and others that you’ll last the month (or at least try to).
				.span4
					.info-bullet
						.hpIcon.hpIcon-notepad
						h5 Try Every Day
						p
							| Try your best to stick with it everyday, and to try again if you don’t. After all, failure is a critical part of science. 
				.span4
					.info-bullet
						.hpIcon.hpIcon-heart
						h5 Be Honest & Forthright
						p
							| Share with others what challenges and triumphs you experience. Learn about yourself.
	section.section-wrapper.under-slider
		.container
			.row
				.span12
					h3.section-header Currently Recruiting...
				// TODO: Load 4 of these from the DB
				for experimonth, i in currentlyRecruiting
					.span4
						.framed-post
							figure
								figcaption
									.fp-show-always
										if experimonth.image
											.fp-featured-img
												img(src=experimonth.image)
									.fp-show-on-hover
										h5.fp-title #{experimonth.name}
										.fp-buttons
											a.btn.fp-details-btn(href="#", data-bootbox-custom='<div class="em-modal"><div class="left"><img src="'+experimonth.image+'" /></div><div class="right"><h1>Experimonth: '+experimonth.name+'</h1>'+experimonth.description+'</div></div>', data-bootbox-custom-action-button=(locals.user() ? "Enroll" : 'Get Started'), data-bootbox-custom-action=(locals.user() ? (!locals.user().hasAnsweredAllRequiredQuestions ? '/profile' : "/experimonths/enroll/#{experimonth._id}") : '/register')) Learn More
					//.span3
					//	.white-card.clearfix
					//		.img-w.hover-fader
					//			a(href='assets/images/test-square.png', data-rel='lightbox[gallery]')
					//				if experimonth.image
					//					img(src=experimonth.image)
					//				//span.hover-fade
					//					i.icon-zoom-in
					//		h5 #{experimonth.name}
					//		p #{experimonth.description}
					//		if locals.user()
					//			a.btn.btn-primary.btn-extra.pull-right(href='/experimonths') Enroll &gt;
					//		else
					//			a.btn.btn-primary.btn-extra.pull-right(href='/register') Get Started (It's Free) &gt;
	section.section-wrapper
		.container
			.row
				.span6
					h3.section-header Confessions
					.testimonials
						.testimonials-users.row.hidden-phone
							for confession, i in confessions
								.span1
									a(data-toggle='testimonial', href='#testimonial'+i, class=(i == 0 ? 'testimonials-user-w active' : 'testimonials-user-w'))
										span.testimonials-user
											//span.testimonials-image
											img(src='/img/testimonial_black.png')
						.testimonials-speeches
							for confession, i in confessions
								div(id='testimonial'+i, class=(i == 0 ? 'testimonials-speech active' : 'testimonials-speech'))
									p #{confession.text}
									.speech-by
										a(href="/confess/reply/"+confession.number) Confession ##{confession.number}
				.span6
					h3.section-header What is Experimonth?
					.white-card
						p Experimonth started in January of 2009 as a way to redefine New Year’s Resolutions and make new friends while making new habits.  

						p Since then, it’s been re-imagined as a way for science museums to engage people around the world while also generating data for scientists who want to solve big problems. Each Experimonth is designed with a scientist and sometimes also an artist and is intended to be fun and to give participants a way to reflect on their own lives and identities.

						p Experimonths have been generously funded by the Institute for Museum and Library Services and the National Science Foundation.
						
						a(href="/what-is-this") Read more...
	section.section-wrapper.stripped
		.container
			.row.clients-w
				.span12
					h3.section-header Meet the Scientists
				.span2
					.framed-post
						figure
							figcaption
								.fp-show-always
									.fp-featured-img
										img(alt='Frances Ulman', src='/img/scientist_1.png')
								.fp-show-on-hover
									h5.fp-title Frances Ulman
									.fp-buttons
										a.btn.fp-details-btn(href="http://francesulmanphd.com/") Learn More
				.span2
					.framed-post
						figure
							figcaption
								.fp-show-always
									.fp-featured-img
										img(alt='Michael I. Norton', src='/img/scientist_2.png')
								.fp-show-on-hover
									h5.fp-title Michael I. Norton
									.fp-buttons
										a.btn.fp-details-btn(href="http://www.hbs.edu/faculty/Pages/profile.aspx?facId=326229") Learn More
				.span2
					.framed-post
						figure
							figcaption
								.fp-show-always
									.fp-featured-img
										img(alt='C. Athena Aktipis', src='/img/scientist_3.png')
								.fp-show-on-hover
									h5.fp-title C. Athena Aktipis
									.fp-buttons
										a.btn.fp-details-btn(href="http://www.athenaaktipis.com/") Learn More
				.span2
					.framed-post
						figure
							figcaption
								.fp-show-always
									.fp-featured-img
										img(alt='Lee Cronk', src='/img/scientist_4.png')
								.fp-show-on-hover
									h5.fp-title Lee Cronk
									.fp-buttons
										a.btn.fp-details-btn(href="http://evolution.rutgers.edu/people/ches-faculty-mainmenu-150/lee-cronk") Learn More
				.span2
					.framed-post
						figure
							figcaption
								.fp-show-always
									.fp-featured-img
										img(alt='Kristina R. Olson', src='/img/scientist_5.png')
								.fp-show-on-hover
									h5.fp-title Kristina R. Olson
									.fp-buttons
										a.btn.fp-details-btn(href="https://depts.washington.edu/uwkids/krolson/") Learn More
				.span2
					.framed-post
						figure
							figcaption
								.fp-show-always
									.fp-featured-img
										img(alt='Wouter van den Bos', src='/img/scientist_6.png')
								.fp-show-on-hover
									h5.fp-title Wouter van den Bos
									.fp-buttons
										a.btn.fp-details-btn(href="http://decisionneuroscience.bits-of-information.org/") Learn More
	section.section-wrapper.stripped
		.container
			.row
				.span12
					h3.section-header In the News
				for newsPost, i in news
					.span4
						.white-card.recent-post.clearfix
							h5.recent-post-header
								a(href='blog/single_post.html') #{newsPost.title}
							.post-info.clearfix
								.pull-left
									d = locals.moment(newsPost.date).clone()
									span.post-date #{d.format('MMMM Do, YYYY')}
									//a.post-comments(href='blog/single_post.html') 14 Comments
								//.pull-right
									a.post-like(href='#')
										i.icon-heart
										| 250
							if newsPost.image
								img.post-image(alt='Photo-card-big-1', src=newsPost.image)
							p.post-content.separated #{newsPost.text}
							if newsPost.link
								a.btn.btn-primary.btn-extra.pull-right(href=newsPost.link) Read More >
	section.section-wrapper.stripped
		.container
			.row
				.span12
					h3.section-header Provided by...
				.span5
					a(href="http://lifeandscience.org")
						img(src="/img/provided_mls.png")
				.span5
					a(href="http://www.exploratorium.edu/")
						img(src="/img/provided_explo.png")
				.span2
					a(href="http://www.nsf.gov")
						img(src="/img/provided_nsf.png")
